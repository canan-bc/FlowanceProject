@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 mb-4">@ViewData["Title"]</h1>
            
            <div class="card">
                <div class="card-body">
                    <h2 class="h5 mb-3">Privacy & Security</h2>
                    <p class="mb-4">Use this page to detail your site's privacy policy.</p>
                    
                    <h3 class="h6 mb-2">Information We Collect</h3>
                    <p class="mb-4">We collect information that you provide directly to us, such as when you create an account, make a purchase, or contact us for support.</p>
                    
                    <h3 class="h6 mb-2">How We Use Your Information</h3>
                    <p class="mb-0">We use the information we collect to provide, maintain, and improve our services, process transactions, and communicate with you.</p>
                </div>
            </div>
        </div>
    </div>
</div>
